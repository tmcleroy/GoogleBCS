package utils;

import bcs.Team;
import edu.uci.ics.jung.algorithms.layout.CircleLayout;
import edu.uci.ics.jung.algorithms.layout.Layout;
import edu.uci.ics.jung.graph.Graph;
import edu.uci.ics.jung.visualization.BasicVisualizationServer;
import edu.uci.ics.jung.visualization.decorators.ToStringLabeller;

import java.awt.Dimension;
import javax.swing.JFrame;


public class GraphDisplayImpl implements GraphDisplay{
	
	private Graph<Team, Integer> graph;
	
	public GraphDisplayImpl(Graph theGraph)
	{
		graph = theGraph;
	}

	@Override
	public void displayGraph() {
        Layout<Team, Integer> layout = new CircleLayout(graph);
        layout.setSize(new Dimension(940,620)); // sets the initial size of the layout space
        // The BasicVisualizationServer<V,E> is parameterized by the vertex and edge types
        BasicVisualizationServer<Team, Integer> vv = new BasicVisualizationServer<Team, Integer>(layout);
        vv.setPreferredSize(new Dimension(960,640)); //Sets the viewing area size
        vv.getRenderContext().setVertexLabelTransformer(new ToStringLabeller());
        JFrame frame = new JFrame("GoogleBCS Graph Viewer");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.getContentPane().add(vv); 
        frame.pack();
        frame.setVisible(true);  
	}


    
}
